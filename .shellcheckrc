# ShellCheck configuration for Immutablue project

# Shell dialect
shell=bash

# Specify source paths to help shellcheck find sourced files
source-path=scripts
source-path=artifacts/overrides/usr/libexec/immutablue

# Disable warnings about non-constant source paths (sourcing from variables)
# These are commonly used in the project and are unavoidable
disable=SC1090  # Can't follow non-constant source
disable=SC1091  # Can't follow non-constant source

# Disable warnings about unused variables in library files
# Many variables are defined for use by scripts that source these files
disable=SC2034  # Unused variables

# Disable warnings about TRUE/FALSE being undefined
# These are defined elsewhere in the project
disable=SC2154  # Variable referenced but not assigned

# Disable warnings about word splitting in command substitution when it's not a problem
# This is often used in safe ways throughout the project, especially in complex command construction
disable=SC2046  # Quote this to prevent word splitting

# External sources
external-sources=true
